{% extends '@Back/back_base.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1 class="h1">{% if type is constant('BackBundle\\Utils\\Util::FORM_EDIT') and user is defined %}Edit {{ user.username }}{% else %}Add User{% endif %}</h1>
    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    <div class="form-row text-center">
        <div class="col-12">
            <input type="submit"
                   value="{% if type is constant('BackBundle\\Utils\\Util::FORM_EDIT') %}EDIT{% else %}CREATE{% endif %}"
                   class="btn btn-primary btn-lg"/>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
